{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "updater:default",
    "fs:default",
    "fs:scope-applog",
    "log:allow-log",
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.github.com/repos/krokosik/esp-pulser/releases/latest"
        }
      ]
    }
  ]
}
